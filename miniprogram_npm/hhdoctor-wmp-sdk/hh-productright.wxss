page {
  width: 100%;
  background-color: #f2f2f2;
  font-size: 15px;
  color: #333;
}

.panel {
  background-color: #f2f2f2;
}

.panel.top {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  padding: 15px 15px 10px 15px;
  overflow: hidden;
}

.top-background {
  position: absolute;
  left: -50%;
  top: -247.5px;
  width: 200%;
  height: 367px;
  background: rgba(66, 69, 89, 1);
  border-radius: 50%;
}

.card {
  position: relative;
  width: 100%;
  z-index: 9;
  overflow: hidden;
}

.card-info {
  width: 100%;
  position: relative;
  color: #fff;
  display: flex;
  margin-top: 15px;
}

.card-info:first-child {
  margin-top: auto;
}

.card-info.prime {
  color: #424559;
}

.card-image {
  width: 100%;
}

.card-image.selected::after {
  content: '';
  position: absolute;
  right: 1px;
  top: 0px;
  width: 52px;
  height: 52px;
  background-image: url('https://imgs.hh-medic.com/icon/wmp/card-selected.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.card-image.prime.selected::after {
  background-image: url('https://imgs.hh-medic.com/icon/wmp/card-prime-selected.png');
}

.card-title {
  position: absolute;
  left: 20px;
  top: 25px;
  font-weight: bolder;
  font-size: 18px;
  line-height: 18px;
}

.card-title::after {
  content: '';
  position: absolute;
  right: -25px;
  top: -2px;
  width: 20px;
  height: 22px;
  background-image: url('https://imgs.hh-medic.com/icon/wmp/card-v.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.card-title.prime::after {
  top: -4px;
  width: 23px;
  height: 25px;
  background-image: url('https://imgs.hh-medic.com/icon/wmp/card-prime-v.png');
}

.card-desc-list {
  position: absolute;
  left: 25px;
  top: 60px;
}

.card-desc {
  font-size: 16px;
  line-height: 16px;
  margin-top: 13px;
  margin-left: 12px;
  position: relative;
}

.card-desc:first-child {
  margin-top: auto;
}

.card-desc::before {
  content: '';
  position: absolute;
  left: -12px;
  top: 5.5px;
  width: 5px;
  height: 5px;
  background-image: url('https://imgs.hh-medic.com/icon/wmp/dot-white.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.card-desc.prime::before {
  background-image: url('https://imgs.hh-medic.com/icon/wmp/dot-black.png');
}

.card-desc.prime.key {
  line-height: 22px;
  height: 22px;
  color: #fff;
  text-align: center;
  background-color: #424559;
  border-radius: 11px;
}

.card-price {
  position: absolute;
  left: 20px;
  bottom: 20px;
  font-size: 12px;
  line-height: 12px;
}

.price-unit {
  font-size: 9px;
}

.price-num {
  font-size: 23px;
  font-weight: bolder;
}

.card-price-raw {
  position: absolute;
  left: 94px;
  bottom: 20px;
  font-size: 11px;
  color: #b4e0ff;
  line-height: 12px;
}

.card-price-raw.prime {
  color: #9f8b60;
}

.card-price-raw::before {
  content: '';
  width: 50px;
  height: 1px;
  border-top: solid 1px #b4e0ff;
  position: absolute;
  left: 0px;
  top: 5px;
  transform: rotateZ(5deg);
}

.card-price-raw.prime::before {
  border-top: solid 1px #9f8b60;
}

.price-num-raw {
  font-size: 15px;
  font-weight: normal;
}

.rigth-list {
  width: 100%;
  margin-top: 10px;
  margin-bottom: 50px;
}

.btn {
  width: 100%;
  height: 55px;
  color: #fff;
  text-align: center;
  line-height: 55px;
  font-size: 18px;
  font-weight: bold;
  background-color: #0592f5;
  z-index: 9;
  border-radius: 0px;
}

.btn:active {
  background-color: #107bf2;
}
