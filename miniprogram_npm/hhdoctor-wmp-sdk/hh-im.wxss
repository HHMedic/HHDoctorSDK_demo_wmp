.anchor {
  height: 0px;
  overflow: hidden;
}

.record-mask {
  position: fixed;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  z-index: 99;
  background-color: rgba(0, 0, 0, 0);
}

.record-msg-box {
  position: fixed;
  left: 50%;
  top: 50%;
  width: 150px;
  height: 150px;
  z-index: 100;
  border-radius: 4px;
  background-color: rgba(0, 0, 0, 0.5);
  transform: translateX(-50%) translateY(-50%);
  display: flex;
  flex-direction: column;
  /*justify-content: center;*/
  align-items: center;
}

.record-msg-icon {
  margin-top: 37px;
  background-image: url("https://imgs.hh-medic.com/icon/wmp/im_recording.png");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  width: 42px;
  height: 65px;
}

.record-msg-icon.cancel {
  background-image: url("https://imgs.hh-medic.com/icon/wmp/im_recordcancel.png");
}

.record-msg-text {
  margin-top: 19px;
  font-size: 14px;
  color: #fff;
}

.record-msg-text:before {
  content: '手指上滑，取消发送';
}

.record-msg-text.cancel:before {
  content: '松开手指，取消发送';
  background-color: #903d3b;
  box-sizing: border-box;
  padding: 2px;
  border-radius: 4px;
}

.util-tools {
  width: 100%;
  height: 210px;
  background-color: #f2f2f2;
  display: flex;
  flex-direction: row;
