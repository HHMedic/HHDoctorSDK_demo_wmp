/* components/hh-face/hh-face.wxss */
.page{
    height:100vh;
    width:100vw;
    background:#f6f6f6;
    position:fixed;
    top:0;
    left:0;
    z-index:9000;
}
.page-title{
    height:44px;
    line-height:44px;
    text-align: center;
    font-size:16px;
    position:relative;
}
.page-back{
    position:absolute;
    top:13px;
    left:20px;
    width:18px;
    height:18px;
    background:url(data:image/png;base64,) no-repeat;
    background-size:cover;
}
.face-icon{
    width:270rpx;
    height:270rpx;
    /* border:3px solid #0592f5; */
    margin:58rpx auto 30rpx auto;
    background:url('https://imgs.hh-medic.com/icon/wmp/face-icon.png') no-repeat;
    background-size:cover;
}
.face-text{
    margin:0 auto 95rpx auto;
    width:560rpx;
    height:85rpx;
    font-size:32rpx;
    line-height:54rpx;
    text-align: center;
    font-weight: 500;
}
.face-name,.face-id{
    margin:auto;
    width:100%;
    height:100rpx;
    line-height:100rpx;
    font-size:30rpx;
    font-weight:  800;
    display:flex;
    font-family: PingFang SC Regular, PingFang SC Regular-Regular;
    font-weight: 400;
    background:#fff;
    padding-left:34rpx;
    box-sizing: border-box;
}
.face-name{
    border-bottom:1px solid #f6f6f6;
}
.face-name::before,.face-id::before{
    content:'姓名';
    font-size:30rpx;
    width:156rpx;
    line-height:100rpx;
    font-family: PingFang SC Medium, PingFang SC Medium-Medium;
    font-weight: 500;
}
.face-id::before{
    content:'身份证号';

}


.face-go{
    width:690rpx;
    height:88rpx;
    line-height:88rpx;
    text-align: center;    
    border-radius: 10rpx;
    background:#5693ec;
    color:#fff;
    margin:60rpx auto 30rpx auto;
    font-size:32rpx;

}
.face-help{
    width:690rpx;
    height:88rpx;
    border-radius: 10rpx;
    line-height:88rpx;
    text-align: center;
    background:#ffffff;
    color:#323232;
    margin:auto;
    font-size:32rpx;
    border:1px solid #dcdcdc;
}
.face-tip{
    width: 605rpx;
    line-height:40rpx;
    margin:21rpx  auto;
    font-size: 26rpx;
    font-family: PingFang SC Regular;
    font-weight: 400;
    text-align: center;
    color:#969696;
}

.face-continue{
    position:fixed;
    right:30rpx;
    top:160rpx;
    width:100rpx;
    height:100rpx;
    background:#666;
    color:#fff;
    z-index:1000;
    border-radius:50%;
    text-align:center;
    line-height:100rpx;
}