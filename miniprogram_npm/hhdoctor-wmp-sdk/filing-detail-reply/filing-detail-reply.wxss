/* components/innerpages/hh-ehr/ehr-filing-detail/filing-detail-reply/filing-detail-reply.wxss */
.reply-item{
  overflow:hidden;
}
.reply-time{
  display:flex;
  align-items: center;
}
.time-block{
  display:inline-block;
  height:40rpx;
  background:rgba(0,0,0,1);
  opacity:0.13;
  border-radius:10rpx;
  margin:40rpx auto 0 auto;
  font-size:24rpx;
  font-family:PingFang SC;
  color:rgba(255,255,255,1);
  padding:0 10rpx;
  box-sizing: border-box;
  line-height:40rpx;
}
.reply-main{
  display:flex;
  margin-top:40rpx;
}
.reply-avatar{
  width:68rpx;
  height:68rpx;
  margin-right:12rpx;
}
.avatar-img{
  width:100%;
  height:100%;
  display:block;
}
/* 右侧 */
.reply-content{
  width:550rpx;
}
.reply-person{
  font-size:24rpx;
  font-family:PingFang SC;
  color:rgba(153,153,153,1);
  line-height:24rpx;
}
/* 文本 */
.reply-text{
  margin:21rpx 0 0 12rpx;
  width:543rpx;
  background:rgba(242,242,242,1);
  border-radius:0px 10rpx 10rpx 10rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  color:rgba(51,51,51,1);
  line-height:42rpx;
  padding:30rpx 30rpx 30rpx 20rpx;
  position:relative;
  text-align: justify;
}
