  content:'';
  display:block;
  width:12rpx;
  height:27rpx;
  background:url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAwAAAAbBAMAAAC6iHP3AAAAMFBMVEVHcEzz8/Pz8/Pu7u7x8fHx8fHy8vLy8vLy8vLz8/Px8fHb29vz8/Px8fHy8vLy8vJCvi53AAAAD3RSTlMA93cXRmXr2qwqvAdTpMWTv7/bAAAAO0lEQVQI12NwFwQCMYb6/0DwkSEfQsXJgymGLf1gioFzPZhiYIJQDAchFCuEYrgIocwgFBOEYmagOQAAsdwcVVCs610AAAAASUVORK5CYII=) no-repeat;
  background-size:cover;
  position:absolute;
  top:0;
  left:-12rpx;
}
/* 音频 */
.reply-audio{
  height:80rpx;
  display:flex;
  align-items: center;
  margin-top:21rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  color:rgba(153,153,153,1);
}
.reply-audio-icon{
  width:282rpx;
  height:80rpx;
  background:url(data:image/png;base64,) no-repeat;
  background-size:cover;
  margin-right:40rpx;
}

/* 图片 */
.reply-img{
  border-radius:10px;
  overflow:hidden;
  margin-top:21rpx;
}
.reply-image{
  width:100%;
  display:block;
}




