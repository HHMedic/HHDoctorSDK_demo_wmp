/* components/hh-status/hh-status.wxss */
.default-image{
  position:absolute;
  z-index:99;
  top:0;
  left:0;
  width:100%;
  height:100vh;
  background-size:cover;
  background-repeat: no-repeat;
}
.room-box{
  position:absolute;
  z-index:100;
  top:0;
  left:0;
  width:100%;
  height:100vh;
  background-size:cover;
  background-repeat: no-repeat;
  background-position: center;
}
/* 过渡页 */
.transition-text{
  text-align:center;
  margin-top:45vh;
  color:#4a4a4a;
  font-size:32rpx; 
}
/* 呼叫区 */
.room-modal{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  height:438rpx;
  background:rgba(0,0,0,.8);
  text-align: center;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(235,241,248,1);
  overflow:hidden;
  z-index:1000;
}
.room-name{
  font-size:48rpx;
  margin-top:49rpx;
}

.room-status{
  font-size:29rpx;
  margin-top:25rpx;
}
.room-icons{
  display:flex;
}
.room-icon{
  margin:55rpx auto 0 auto;
}
.room-image{
  width:120rpx;
  height:120rpx;
  display:block;
  margin:auto;
  background-color: transparent;
  border-radius: 50%;
  background-size:cover;
  background-repeat: no-repeat;
}
.room-cancel{
  margin-top:20rpx;
  font-size:22rpx;
  font-family:MicrosoftYaHei;
}
/* 排队 */
.room-wait{
  font-size:36rpx;
  margin-top:59rpx;
}
.wait-icon{
  margin-top:29rpx;
}
.wait-video-wrap{
    position:fixed;
    top:348rpx;
    left:0rpx;
    width:750rpx;
    height:550rpx;
    line-height:80rpx;
    color:#fff;
    overflow:hidden;
  }
  .wait-video-box{
    width: 632rpx;
    height:253rpx;
    background:#fff;
    margin:auto;
    border-radius:10rpx;
    display:flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding:35rpx;
    box-sizing: border-box;
    color:#333;
  }
  .wait-video-title{
    font-size:36rpx;
  }
  .wait-video-title2{
    font-size:28rpx;
    margin-top:40rpx;
  }
  .wait-time-tip{
    width:432rpx;
    height:80rpx;
    line-height:80rpx;
    color:#fff;
    background:rgba(0,0,0,.5);
    font-size:30rpx;
    border-radius:10rpx;
    text-align: center;
    margin:150rpx auto 0 auto;
  }
/* 视频中 */
.logo-image{
  position:absolute;
  display:block;
  left:50rpx;
  top:80rpx;
  width:470rpx;
}
.room-mask{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height:482rpx;
  display:flex;
  justify-content: space-around;
  align-items: flex-end;
  background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,.5))
}
.room-bottom{
  position:fixed;
  bottom:46rpx;
  width:100%;
  display:flex;
  justify-content: space-around;

}
.bottom-image{
  width:130rpx;
  height:130rpx;
  display:block;
  margin-bottom:24rpx;
  background-color: transparent;
  border-radius: 50%;
  background-size:cover;
  background-repeat: no-repeat;

}

.bottom-item{
  width:130rpx;
  height:180rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  color:rgba(255,255,255,1);
  text-align: center;

}
.bottom-item:nth-of-type(1):after{content:'拍照'}
.bottom-item:nth-of-type(2):after{content:'挂断'}
.bottom-item:nth-of-type(3):after{content:'切换摄像头'}
.bottom-change{color:#4a4a4a;}
.video-time{
  position:absolute;
  left:300rpx;
  top:150rpx;
  font-size:30rpx;
  color:#fff;
  width:150rpx;
  text-align:center;
  text-shadow: 0 0 5rpx rgba(0,0,0,.3);
}
.room-function{
  width:136rpx;
  position:fixed;
  left:55rpx;
  bottom:450rpx;
  border-radius:15rpx;
  font-size:20rpx;
  font-family:PingFangSC-Regular;
  color:#fff;
  overflow:hidden;
}
.room-inner{
  box-sizing: border-box;
  background:rgba(0,0,0,.6);
  border:1px solid rgba(0,0,0,0);
}
.function-arrow{
  width:100%;
  height:86rpx;
  display:flex;
  align-items: center;
  justify-content:center;
  background:rgba(0,0,0,.6);
}
 .arrow-img{
  width:56rpx;
  height:46rpx;
}
.function-item{
  width:100%;
  text-align:center;
}
.function-img{
  display:block;
}
.function-certificate .function-img{
  width:84rpx;
  height:65rpx;
  display:block;
  margin:50rpx auto 15rpx auto;
}
.function-flash .function-img{
  width:58rpx;
  height:80rpx;
  margin:43rpx auto 20rpx auto;
}
.function-certificate::after{
  content:'医师资格证书'
}
.function-flash:after{
  content:'闪光灯'
}
.function-flash{
  margin-bottom:20rpx
}

/* 更换医生 */
.change-doctor{
  height:140rpx;
  color:#fff;
  position:fixed;
  bottom:273rpx;
  width:100rpx;
  right:71rpx;
  text-align: center;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  z-index:120;
}
.change-doctor::after{
  content:'更换医生'
}

.change-doctor-img{
  display:block;
  border-radius:50%;
  width:100rpx;
  height:100rpx;
  margin-bottom:13rpx;
}
.cover-upload{
  position:fixed;
  left:55rpx;
  bottom:273rpx;
  width:136rpx;
  height:136rpx;
  display:flex;
  align-items: center;
  background:rgba(0,0,0,.8);
  color:#fff;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  overflow:hidden;
  z-index:120;
}
.upload-img{
  display:block;
  width:100%;
}
.upload-num{
  position:absolute;
  height:50rpx;
  line-height:50rpx;
  width:80rpx;
  background:rgba(0,0,0,.3);
  border-radius:0 0 0 10rpx;
  right:0;
  top:0;
  text-align: center;
}
.upload-text{
  position:absolute;
  bottom:0;
  left:0;
  height:58rpx;
  line-height:58rpx;
  width:100%;
  background:rgba(0,0,0,.5);
  text-align: center;
  
}
.upload-icon{
  position:absolute;
  width:52rpx;
  height:52rpx;
  left:60rpx;
  top:52rpx;
}
/* 专家呼叫页面-全屏模式 */
.room-specialist{position:absolute;width:380rpx;left:185rpx;top:195rpx;height:560rpx;text-align: center;}
.room-avatar{width:380rpx;height:380rpx;display:block;}
.room-name{font-size:50rpx;font-family:PingFang SC;color:rgba(229,240,251,1);height:55rpx;}
.room-status{color:rgba(229,240,251,1);font-size:30rpx;}
.screen-icons{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  height:300rpx;
  text-align: center;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(235,241,248,1);
  overflow:hidden;
  z-index:1000;
}


/* 执业医师资格证书展示 */
.cover-preview{
  position:fixed;
  width:100%;
  left:0;
  top:0;
  bottom:0;
  display:flex;
  justify-content: center;
  align-items: center;
  z-index:20000;
  background:rgba(0,0,0,.8);
}
.preview-img{
  width:100%;
  height:auto;
  display:block;
}
.preview-count{
  color:#fff;
  width:100%;
  text-align: center;
  position:absolute;
  top:150rpx;
  font-size:24rpx;
  z-index:10001;
}
.preview-next{
  color:#fff;
  position:absolute;
  right:30rpx;
  bottom:260rpx;
  font-size:30rpx;
  height:80rpx;
  z-index:10001;
}
.loading {
  position: absolute;
  width: 208rpx;
  height:234rpx;
  background: rgba(0,0,0,.5);
  top:40vh;
  left:271rpx;
  border-radius:10rpx;
  text-align:center;
  color:#fff;
}
.loading-img {
  width:80rpx;
  height:80rpx;
  display:flex;
  margin:55rpx auto 25rpx auto;
  border-radius:50%;
  animation: rotate 2s linear infinite;
}
.loading-text{
    font-size:28rpx;
}
.rotate-img {
  width:100%;
  height:100%;
}
@keyframes rotate {
  0%{ transform: rotate(0deg);}
  50%{ transform: rotate(180deg);}
  100%{ transform: rotate(360deg);}
}
