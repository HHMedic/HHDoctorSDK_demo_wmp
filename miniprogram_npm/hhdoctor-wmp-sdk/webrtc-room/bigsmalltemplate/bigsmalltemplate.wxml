<template name="bigsmalltemplate">
  <view class="bigsmalltemplate videoview">
    <slot name="waitting" ></slot>
    <view class="player-box" wx:if='{{!waitPlay}}'>
      <!-- <view class="poster">
        <cover-image class="set" wx:if="{{playerBackgroundImg}}" src="{{playerBackgroundImg}}" style='height:{{height}};width:{{width}};left:-{{left}};'></cover-image>
      </view> -->
      <!-- autoplay -->
      <live-player id="{{fixPlayId || members[0].userID}}" mode="RTC" object-fit="fillCrop" min-cache="0.1" max-cache="0.8" src="{{members[0].accelerateURL}}" debug="{{debug}}" background-mute="{{true}}" bindstatechange="onPlay" bindnetstatus='bindPlayerNetStatus' sound-mode='speaker'>
        <cover-view class="loading" wx:if="{{(members[0].loading || loading) && status == 3}}">
          <!-- <cover-image src="{{loadingImg}}"></cover-image> -->
          <cover-view class='loading-text'>连接中...</cover-view>
        </cover-view>
        <cover-view class='net-tip' wx:if='{{(pushCode == 1101|| pushCode == 1102)&& status == 3}}'>当前网络状况不佳</cover-view>
        <cover-view class="poster" wx:if="{{!startPlay && playerBackgroundImg}}">
          <cover-image class="set" src="{{playerBackgroundImg}}" style='height:{{height}};width:{{width}};left:-{{left}};'></cover-image>
        </cover-view>
        <slot name="bigsmall"></slot>
      </live-player>
    </view>
    <!-- display:{{enableCamera ? 'block': 'none'}}; -->
    <view class="pusher-box" style="display:{{isLivePusher ? 'block': 'none'}};top:{{smallViewTop || '1vw'}};right:{{smallViewRight|| '1vw'}}; width:{{smallViewWidth || '30vw'}};height:{{smallViewHeight || '40vw'}};">
      <!-- wx:if="{{pushURL}}" autopush-->
      <live-pusher id="rtcpusher" 
            mode="RTC" 
            url="{{pushURL}}" 
            aspect="{{aspect}}" 
            min-bitrate="{{minBitrate}}" 
            max-bitrate="{{maxBitrate}}" 
            audio-quality="high" 
            beauty="{{beauty}}" 
            whiteness="{{whiteness}}" 
            muted="{{muted}}" 
            waiting-image="{{waitingImg}}" 
            background-mute="{{true}}"
            debug="{{debug}}" 
            bindstatechange="onPush" 
            binderror="onError" 
            bindnetstatus='bindPushNetStatus' 
            enable-camera="{{enableCamera}}"   
            audio-volume-type='media'
      ></live-pusher>


    </view>
  </view>
</template>