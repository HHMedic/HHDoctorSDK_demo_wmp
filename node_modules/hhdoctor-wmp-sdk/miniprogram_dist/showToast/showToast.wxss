/* components/showToast/showToast.wxss */
.toast-wrap{
    position:fixed;
    width:100vw;
    height:100vh;
    top:0;
    left:0;
    z-index:10000;
}
.toast-flex{
    height:100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top:80rpx;
}
.toast-title{
    padding:8rpx 20rpx;
    background:rgba(0,0,0,.6);
    font-size:28rpx;
    color:#fff;
    border-radius:8rpx;
    max-width:680rpx;

}