component {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0px;
  top: 0px;
}

.full-screen {
  position: fixed;
  left: 0px;
  top: 0px;
  height: 100%;
  width: 100%;
  z-index: 999;
  background-color: #fff;
}

.image-back {
  position: fixed;
  left: 0px;
  top: 0px;
  height: 100%;
  width: 100%;
}

.image-head-panel {
  position: fixed;
  left: 0px;
  top: 0px;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 50px;
}

.image-panel-mask {
  min-height: 150px;
  background-color: rgba(0, 0, 0, 0.8);
}

.image-panel-mask.bottom {
  flex-basis: auto;
  flex-flow: 1.0;
  height: 50%;
  box-sizing: border-box;
  padding: 75px 50px 0px 50px;
}

.image-head-selected {
  flex-basis: 200px;
  min-height: 200px;
  width: 100%;
  display: flex;
  justify-content: center;
}

.image-head {
  width: 200px;
  border: dashed 2px #0592f5;
}

.image-head-mask {
  flex-grow: 1;
  background-color: rgba(0, 0, 0, 0.8);
}

.bottom-panel {
  position: fixed;
  z-index: 1000;
  left: 0px;
  bottom: 0px;
  height: 50px;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding-top: 5px;
  padding-bottom: 5px;
}

.bottom-btn {
  flex-grow: 1;
  text-align: center;
  height: 40px;
  line-height: 40px;
  border-right: solid 0.5px #999;
  color: #999;
}

.bottom-btn.retry {
  color: #0592f5;
}

.bottom-btn.ok {
  color: #1aad19;
  border-right: none;
}
