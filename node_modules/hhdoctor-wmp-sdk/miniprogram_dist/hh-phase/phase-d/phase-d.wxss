/* components/hh-phase/phase-d/phase-d.wxss */
@import '../phase.wxss';

.camera-wrap {
    position: fixed;
    height: 100vh;
    z-index: 130;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0);
    font-family: PingFangSC-Regular;
}

.camera-box {
    position: absolute;
    bottom: 0;
    color: #4a4a4a;
    font-size: 30rpx;
    background: #f2f2f2;
    overflow: hidden;
    border-radius: 15rpx 15rpx 0 0;
    width: 750rpx;
}

.camera-options {
    width: 100%;
    margin: auto;
    background: #fff;
    text-align: center;
}

.camera-btn {
    height: 114rpx;
    line-height: 114rpx;
    background: #fff;
    border-top: 1px solid #f2f2f2;
}

.camera-btn::after,
.model-cancel::after {
    border: none;
}

.camera-cancel {
    margin-top: 20rpx;
    width: 100%;
    background: #fff;
    height: 130rpx;
    line-height: 114rpx;
}


.change-doctor-wrap {
    position: absolute;
    left: 20rpx;
    font-size: 26rpx;
    color: #FFFFFF;
    border-radius: 6rpx;
    background-color: rgba(0, 0, 0, 0.1);
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    box-sizing: border-box;
    padding: 0rpx 20rpx;
}

.change-doctor-text {
    color: #FFE400;
}

.real-name-wrap {
    position: fixed;
    left: 37rpx;
    bottom: 660rpx;
    height: 60rpx;
    font-size: 24rpx;
    color: #FFFFFF;
    line-height: 38rpx;
    box-sizing: border-box;
    padding: 12rpx 15rpx;
    z-index: 991;
    background-color: rgba(0, 0, 0, 0.4);
    border-radius: 10rpx;
}

.real-name-btn {
    margin-left: 1em;
    color: #FFE400;
}

.auth-title-wrap {
    width: 100%;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding: 50rpx 0;
    position: relative;
}

.auth-title {
    width: 340rpx;
    font-size: 34rpx;
    line-height: 48rpx;
    color: #323232;
    text-align: center;
    font-weight: bold;
}

.auth-close {
    position: absolute;
    top: 50rpx;
    right: 31rpx;
    width: 60rpx;
    height: 60rpx;
    background-image: url('https://imgs.hh-medic.com/icon/wmp/popup-close.png');
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.auth-btn-wrap {
    margin: 80rpx 0 160rpx 0;
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx;
}

.auth-btn {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 32rpx;
    text-align: center;
    color: #fff;
    background-color: #1890FF;
    border-radius: 10rpx;
}

.invite-wrap {
    position: absolute;
    right: 59rpx;
    bottom: 257rpx;
    width: 130rpx;
    z-index: 999;
    height: 180rpx;
    font-size: 24rpx;
    color: #fff;
    text-align: center;
}

.invite-btn {
    border: none !important;
}

.member-list-wrap {
    width: 100%;
    box-sizing: border-box;
    padding-bottom: 50rpx;
    position: relative;
}

.member-list-title {
    width: 100%;
    height: 100rpx;
    font-size: 28rpx;
    line-height: 100rpx;
    color: #646464;
    text-align: center;
}

.list-wrap {
    width: 100%;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding: 10rpx 30rpx 30rpx 30rpx;
    position: relative;
}

.member-item-btn {
    width: 100% !important;
    height: 88rpx !important;
    font-size: 32rpx;
    color: #323232;
    font-weight: bold;
    line-height: 88rpx;
    text-align: center;
    border: 1px solid #D7D7D7 !important;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
}

.member-item-btn:last-child {
    margin-bottom: 0;
}

.member-item-btn.cancel {
    border: none !important;
    font-weight: normal;
}