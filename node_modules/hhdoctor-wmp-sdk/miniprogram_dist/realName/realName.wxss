/* components/realName/realName.wxss */
.page{
    background:#f4f4f4;
    position:fixed;
    top:0;
    left:0;
    width:750rpx;
    height:100vh;
}
.page-title{
    height:44px;
    line-height:44px;
    text-align: center;
    font-size:16px;
    position:relative;
    background:#fff;
}
.page-back{
    position:absolute;
    bottom:13px;
    left:20px;
    width:18px;
    height:18px;
    background:url('https://imgs.hh-medic.com/icon/wmp/page-back.png') no-repeat;
    background-size:cover;
}
.msg-list{
    height:100rpx;
    background:#fff;
    padding:0 30rpx;
    display:flex;
    align-items: center;
    justify-content: flex-start;
    font-size:32rpx;
    color:#323232;

}
.msg-nickname,.msg-idcard{
    margin-bottom:20rpx;
}
.msg-name{
    border-bottom:1px solid #f2f2f2;
}
.msg-list:before{
    width:203rpx;
}
.msg-nickname::before{
    content:'成员昵称'
}
.msg-name::before{
    content:'患者姓名'
}
.msg-idcard::before{
    content:'患者身份证'
}
.msg-phone::before{
    content:'联系人电话'
}
.msg-gray{
    display:flex;
    font-size:26rpx;
    color:#969696;
    margin-top:30rpx;
    align-items: center;
    padding:0 30rpx;
}
.msg-gray::before{
    content:'';
    display:block;
    width:34rpx;
    height:34rpx;
    margin-right:15rpx;
    background:url('https://imgs.hh-medic.com/icon/wmp/msg-gray.png') no-repeat;
    background-size:cover;
}

.msg-btn{
    color:#fff;
    font-size:32rpx;
    background:#0592F5;
    width:710rpx;
    margin-top:65rpx;
}
.msg-btn::after{border:none;}
.msg-err{
    font-size: 26rpx;
    color:#ec1313;
    padding:0 26rpx;
    display:flex;
    align-items: center;
    margin-bottom:42rpx;
}
.msg-err:before{
    content:'';
    display:block;
    width:34rpx;
    height:34rpx;
    margin-right:15rpx;
    background:url('https://imgs.hh-medic.com/icon/wmp/msg-err.png') no-repeat;
    background-size:cover;
}
.msg-name-input,.msg-idcard-input,.msg-phone-input{
    width:450rpx;
}

.msg-placeholder{
    font-size:30rpx;
    color:#969696;
}
.msg-close{
    width:60rpx;
    height:60rpx;
    background:url('https://imgs.hh-medic.com/icon/wmp/msg-close.png') no-repeat;
    background-size:cover;
}