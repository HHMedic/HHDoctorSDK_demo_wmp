.bigsmalltemplate.videoview {
  position: relative;
  background-repeat:no-repeat;
  background-size: cover;
  width: 100%;
  height: 100%;
}

.bigsmalltemplate .pusher-box {
	position: absolute; 
	display: inline-block; 
	overflow: hidden;
	text-align: center;
  z-index:1000;
}

.bigsmalltemplate live-pusher {
  width: 100%;
	height: 100%; 
}

.bigsmalltemplate .player-box {
	position: relative; 
	display: inline-block; 
	overflow: hidden;
	width: 100%;
	height: 100%; 
	text-align: center;
  vertical-align: top;
}

.bigsmalltemplate .poster {
	position: absolute;
  width: 100%;
	height: 100%;
  top: 0;
  left: 0;
	background-color: #fff;
}

.bigsmalltemplate .set {
  position: absolute;
  /* width: 100%; */
	height: 100%; 
}

.bigsmalltemplate live-player {
  width: 100%;
	height: 100%; 
}

.bigsmalltemplate .loading {
  position: absolute;
  width: 100%;  
  height: 100%; 
  background:#000;
}

.bigsmalltemplate .loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}
.bigsmalltemplate .loading .loading-text{
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 40px);
  width: 80px;
  height: 30px;
  font-size:29rpx;
  font-family:PingFangSC-Regular;
  color:#fff;
}
.bigsmalltemplate .net-tip{
  position:absolute;
  top:45%;
  width:260rpx;
  left:245rpx;
  font-size:29rpx;
  color:#fff;
  background:rgba(0,0,0,.5);
  padding:0 14rpx;
  height:56rpx;
  line-height:56rpx;
  text-align:center;
  box-sizing: border-box;
  border-radius:5rpx;
}
