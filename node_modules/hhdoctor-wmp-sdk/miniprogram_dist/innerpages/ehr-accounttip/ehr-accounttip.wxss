/* components/innerpages/ehr-accounttip/ehr-accounttip.wxss */
.page{
  border-top:1px solid #eee;
  display:flex;
  flex-direction: column;
  min-height:100vh;
  align-items: center;
}
.account-text{
  font-size:38rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(50,50,50,1);
  margin-top:160rpx;
  display:flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  line-height:60rpx;
}
.account-text::before{
  content:'';
  display:block;
  width:100rpx;
  height:100rpx;
  margin-bottom:39rpx;
  background:url('https://imgs.hh-medic.com/icon/wmp/account-text.png') no-repeat;
  background-size:cover;
}
.account-tip{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(100,100,100,1);
  line-height:46rpx;
  text-align: center;
  margin-top:46rpx;
}
.account-button{
  width:340rpx;
  height:80rpx;
  margin-top:560rpx;
  line-height:80rpx;
  color:#0592F5;
  background:#fff;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
}
.account-button::after{
  content:'';
  border:1px solid #0592F5
}











