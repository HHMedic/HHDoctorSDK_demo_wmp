<!--components/innerpages/hh-ehr/ehr-index/ehr-index.wxml-->
<view class='page' >
    <view class='family-list'>
          <view class="family-item {{item.isTouchMove ? 'touch-move-active' : ''}}" 
          wx:for='{{memberList}}' 
          wx:key='' 
          data-index="{{index}}" 
          bindtap='bindItemNavigator'
          data-uuid='{{item.uuid}}'
          data-nickname = '{{item.name}}'
          bindtouchstart="touchstart" 
          bindtouchmove="touchmove" >
              <view class="family-content">
                <view class='family-left'> 
                    <image src='{{item.photourl}}' class='family-avatar'></image>
                    <view class='family-text'>
                      <text class='family-name'>{{item.name}} ({{item.relation||'自己'}})</text>
                      <view class='family-status' wx:if='{{item.isAccount}}'>独立登录</view>
                    </view> 
                 </view> 
                <view class='family-edit' 
                    catchtap='bindFillingEdit'  
                    data-item='{{item}}'
                    wx:if='{{item.relation && "自己"!=item.relation}}'></view>
              </view>
              <view class="family-del" catchtap="bindDelete" 
              data-uuid='{{item.uuid}}'   
              data-isaccount='{{item.isAccount}}'
              data-isself='{{item.relation}}'>删除</view>
        </view>
    </view>   
    <!-- 添加成员入口 -->
    <view class='family-add' bindtap='bindAddFimily' wx:if='{{showAddBtn}}'>添加家庭成员</view>

</view>