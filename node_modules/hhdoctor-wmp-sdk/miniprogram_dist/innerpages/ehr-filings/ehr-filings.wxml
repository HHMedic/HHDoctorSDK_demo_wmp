<!--components/innerpages/ehr-filings/ehr-filings.wxml-->
<wxs src="../../wxs/common.wxs" module="common" />
<view class='page'>
   <view class='filing-box' wx:if='{{medicrecords.length}}' wx:for='{{medicrecords}}' wx:key='index' bindtap='bindFilingItem' data-id='{{item.medicRecordId}}'>
      <view class='filing-top'>
         <text class='filing-date'>{{common.getYearMonthDay(item.createTime)}}</text>
         <!-- <text class='filing-name'>{{item.source=='self'?'自建档案':item.medicRecordSummaryData.medicRecordDoctorData.dept+' | '+item.medicRecordSummaryData.medicRecordDoctorData.name}}</text> -->
         <text class="filing-name">{{common.filingsFilterName(item.source,item.medicRecordSummaryData.medicRecordDoctorData)}}</text>
      </view>
      <view class='filing-content'>
         <view class='filing-text'>{{item.medicRecordSummaryData.diseaseDescn}}</view>
         <scroll-view class='filing-scroll' scroll-x wx:if='{{item.medicRecordExamineData.checkPics.length || item.medicRecordExamineData.medicRecordPics.length || item.medicRecordExamineData.dicomPics.length||item.medicRecordExamineData.dicoms.length}}'>
            <list-images name='病例' imgUrls='{{item.medicRecordExamineData.checkPics}}' wx:if='{{item.medicRecordExamineData.checkPics.length}}'></list-images>
            <!-- <list-images name='检查报告' 
            imgUrls='{{item.medicRecordExamineData.medicRecordPics}}'
            wx:if='{{item.medicRecordExamineData.medicRecordPics.length}}'
            ></list-images> -->
            <list-images name='影像胶片' imgUrls='{{item.medicRecordExamineData.dicomPics}}' wx:if='{{item.medicRecordExamineData.dicomPics.length}}'></list-images>
            <list-images name='DICOM' base-path="../../" imgUrls='{{item.medicRecordExamineData.dicoms}}' memberUuid='{{memberUuid}}' medicRecordId='{{item.medicRecordId}}' wx:if='{{item.medicRecordExamineData.dicoms.length}}'>
            </list-images>
         </scroll-view>
      </view>
   </view>
   <view wx:if='{{!medicrecords.length && isLoad}}' class="no-data-wrap">
      <image src='https://imgs.hh-medic.com/icon/wmp/ehr-nofile2.png' class='no-data' mode='widthFix'></image>
      <view class="no-data-text">暂无档案信息</view>
   </view>

   <!-- 自建档案入口 -->
   <navigator class='filing-nav' hover-class="none" url='../ehr-addfiling/ehr-addfiling?uuid={{memberUuid}}&nickname={{nickname}}'></navigator>
</view>
<hhNetwork wx:if='{{!isConnect}}'></hhNetwork>