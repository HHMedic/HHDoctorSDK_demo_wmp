page {
  background-color: #F0F0F0;
}

.panel-wrap {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-flow: column nowrap;
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #323232;
}

.panel-title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-weight: bold;
  position: relative;
  box-sizing: border-box;
  padding-left: 16rpx;
}

.panel-title::before {
  content: '';
  width: 6rpx;
  height: 28rpx;
  background-color: var(--hh-main-color, #0592f5);
  position: absolute;
  left: 0;
  top: 33rpx;
}

.ph {
  color: #B4B4B4;
  font-size: 30rpx;
}

.row-wrap {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  border-top: solid 1px #E6E6E6;
  padding-right: 30rpx;
}

.row-title {
  min-width: 195rpx;
}

.row-value {
  flex-grow: 1;
}

.picker-wrap {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
}

.picker-value {
  flex-grow: 1;
}

.picker-arrow {
  width: 13rpx;
  height: 23rpx;
  background-image: url('https://imgs.hh-medic.com/icon/wmp/arrow2.png');
  background-position: center;
  background-size: cover;
}

.panel-tip {
  width: 100%;
  margin: 10rpx 0 23rpx 0;
  color: #5A5A5A;
}

.file-type-wrap {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 40rpx;
}

.radio-wrap {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  margin-right: 110rpx;
}

.radio {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  border: 1px solid #D8D8D8;
  margin-right: 18rpx;
  box-sizing: border-box;
}

.radio.checked {
  border: 7px solid var(--hh-main-color, #0592f5);
}

.license-wrap {
  width: 100%;
  margin-top: 50rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 26rpx;
  color: #8C8C8C;
  margin-bottom: 30rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
}

.checkbox {
  width: 30rpx;
  height: 30rpx;
  box-sizing: border-box;
  border: solid 1px #979797;
  border-radius: 15rpx;
  position: relative;
  margin-right: 15rpx;
}

.checkbox.checked {
  border: solid 1px var(--hh-main-color, #0592f5);
  background-color: var(--hh-main-color, #0592f5);
}

.checkbox.checked::after {
  content: '';
  width: 12rpx;
  height: 20rpx;
  box-sizing: border-box;
  border-left: none;
  border-top: none;
  border-right: solid 2px #FFFFFF;
  border-bottom: solid 2px #FFFFFF;
  -ms-transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  position: absolute;
  left: 8rpx;
  top: 1rpx;
}

.license-name {
  color: var(--hh-main-color, #0592f5);
}

.btn {
  width: 690rpx;
  height: 88rpx;
  margin-left: 30rpx;
  border-radius: 44rpx;
  box-sizing: border-box;
  background-color: var(--hh-main-color, #0592f5);
  color: #FFFFFF;
  font-size: 32rpx;
  line-height: 88rpx;
  text-align: center;
  font-weight: bold;
}

.file-list-wrap {
  box-sizing: border-box;
  display: flex;
  flex-flow: row wrap;
}

.file-wrap {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
}

.file-wrap.pdf {
  background-image: url('https://imgs.hh-medic.com/icon/wmp/thumbnail-pdf2.png');
  background-position: center;
  background-size: cover;
}

.file-wrap.image {
  background-color: #D8D8D8;
  background-repeat: no-repeat;
  background-size: cover;
}

.file-wrap.image::after {
  content: attr(data-count);
  color: #FFFFFF;
  display: block;
  position: absolute;
  bottom: 0;
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: rgba(50, 50, 50, 0.5);
}

.file-wrap.add {
  background-image: url('https://imgs.hh-medic.com/icon/wmp/icon-add.png');
  background-position: 70rpx 45rpx;
  background-repeat: no-repeat;
  background-size: 40rpx 40rpx;
  background-color: #F4F4F4;
}

.file-wrap.add::after {
  position: relative;
  display: block;
  content: '添加文件';
  color: #B4B4B4;
  text-align: center;
  top: 100rpx;
}