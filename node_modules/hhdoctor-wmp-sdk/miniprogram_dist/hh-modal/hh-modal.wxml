<!--components/hh-modal/hh-modal.wxml-->
  <view class='modal-wrap' wx:if='{{isShowModal}}'>
    <view class='modal-content'>
      <!-- <view class='modal-title'>{{title}}</view> -->
      <text class='modal-text'>
        {{modalData.content}}
      </text>
      <view class='modal-button'>
        <view class='modal-cancel' bindtap='bindCancel' wx:if='{{!modalData.ishidecancel}}'>取消</view>
        <view class='modal-confirm' bindtap='bindConfirm' >{{modalData.confirmText}}</view>
      </view>
    </view>
  </view>