.template-custom .pusher-container {
  position: absolute;
  width: 240rpx;
  height: 320rpx;
  position: absolute;
  /* right: 20rpx; */
  left: 490rpx;
  top: 85px;
  z-index: 900;
}

.template-custom .player-container {
  position: absolute;
}

.template-custom .pusher-controller {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 70rpx;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: flex-end;
  box-sizing: border-box;
  padding-bottom: 15rpx;
}

.close-camera {
  height: 160px !important;
  background-color: #323232 !important;
}

.pusher-controller-text {
  line-height: 40rpx;
  color: #fff;
  font-size: 28rpx;
  align-items: center;
}

.pusher-controller-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 11rpx;
}

.template-custom .vertical {
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  height: 100%;
  background-color: #323232 !important;
  color: #ffffff;
}

.template-custom .icon-vertical {
  margin-bottom: 23rpx;
}

.patient-view-wrap {
  background-color: #222426;
  position: absolute;
  width: 240rpx;
  height: 320rpx;
  position: absolute;
  right: 10px;
  top: 250px;
  z-index: 900;
}

.play-box-bg {
  background-image: url('https://imgs.hh-medic.com/icon/wmp/play-box-bg.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.player-inner {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.player-circle {
  display: flex;

}

.player-hangup {
  width: 76rpx;
  height: 27rpx;
  background: url('https://imgs.hh-medic.com/icon/wmp/player-hangup.png') no-repeat;
  background-size: cover;
  margin-bottom: 37rpx;
}

.player-leave {
  padding: 0 10rpx;
  font-size: 26rpx;
  /* color: #4f565b; */
  color: #f2f2f2;
}

.circle {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50rpx;
  background: #fff;
  margin: 10rpx;
  animation: load .9s ease infinite;
}

@keyframes load {
  0% {
    opacity: 1;
  }

  100% {
    opacity: .4;
  }
}

.circle:nth-of-type(1) {
  animation-delay: 0.15s;
}

.circle:nth-of-type(2) {
  animation-delay: 0.3s;
}

.circle:nth-of-type(3) {
  animation-delay: 0.45s;
}