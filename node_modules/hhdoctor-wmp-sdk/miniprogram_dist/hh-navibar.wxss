.nav-bar {
  width: 100%;
  height: 64px;
  position: fixed;
  left: 0px;
  top: 0px;
  border-bottom: solid 0.5px #ebebeb;
  z-index: 999;
}

.nav-bar-text {
  position: absolute;
  left: 0px;
  top: 30px;
  width: 100%;
  height: 24px;
  color: #000;
  font-size: 20px;
  line-height: 24px;
  font-weight: bold;
  text-align: center;
}

.nav-icon {
  position: absolute;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  z-index: 999;
}

.nav-icon.previous {
  width: 30px;
  height: 30px;
  left: 7px;
  top: 28px;
  background-image: url('https://imgs.hh-medic.com/icon/wmp/arrow-left2.png');
}
