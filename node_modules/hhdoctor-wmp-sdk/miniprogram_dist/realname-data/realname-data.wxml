<!--components/realname-data/realname-data.wxml-->
<view class="group">
    <realname-input class="input-item" label="就诊成员" bindinputData="bindInputData" bindinputBlur="bindBlurMsg" name="membername" type="readonly" text-value="{{memberName}}" maxlength="20" placeholder=""></realname-input>
    <realname-input class="input-item" label="真实姓名" bindinputData="bindInputData" bindinputBlur="bindBlurMsg" name="username" type="text" maxlength="20" placeholder="请输入真实姓名"></realname-input>
    <!-- <realname-input label="证件类型"   type="picker" ></realname-input>  -->
    <realname-input class="input-item" label="身份证号" bindinputData="bindInputData" bindinputBlur="bindBlurMsg" name="idcard" type="idcard" maxlength="18" placeholder="请输入身份证号码"></realname-input>
    <realname-input class="input-item" wx:if="{{!isGuardian}}" label="联系电话" bindinputData="bindInputData" bindinputBlur="bindBlurMsg" name="phone" type="number" maxlength="11" placeholder="请输入手机号码"></realname-input>
    <view class='msg-err' wx:if='{{errorText1}}'>{{errorText1}}</view>
</view>
<view class="group" wx:if="{{isGuardian}}">
    <view class="msg-gray">7岁以下儿童购买非处方药需要填写监护人信息</view>
    <realname-input class="input-item" label="监护人姓名" bindinputData="bindInputData" bindinputBlur="bindBlurMsg" name="guardian_username" type="text" maxlength="20" placeholder="请输入真实姓名"></realname-input>
    <!-- <realname-input label="证件类型"      type="picker" ></realname-input>  -->
    <realname-input class="input-item" label="身份证号" bindinputData="bindInputData" bindinputBlur="bindBlurMsg" name="guardian_idcard" type="idcard" maxlength="18" placeholder="请输入身份证号码"></realname-input>
    <realname-input class="input-item" label="手机号码" bindinputData="bindInputData" bindinputBlur="bindBlurMsg" name="guardian_phone" type="number" maxlength="11" placeholder="请输入手机号码"></realname-input>
    <view class='msg-err' wx:if='{{errorText2}}'>{{errorText2}}</view>
</view>