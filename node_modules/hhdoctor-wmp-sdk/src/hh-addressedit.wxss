Component {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

.nav-bar {
  width: 100%;
  height: 64px;
  background-color: #fff;
  position: fixed;
  left: 0px;
  top: 0px;
  border-bottom: solid 0.5px #ebebeb;
  z-index: 999;
}

.nav-bar-text {
  position: absolute;
  left: 0px;
  top: 30px;
  width: 100%;
  height: 24px;
  color: #000;
  font-size: 20px;
  line-height: 24px;
  font-weight: bold;
  text-align: center;
}

.navi-back {
  width: 30px;
  height: 30px;
  position: absolute;
  left: 7px;
  top: 28px;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  background-image: url('https://imgs.hh-medic.com/icon/wmp/arrow-left2.png');
}

.address-form {
  position: fixed;
  left: 0px;
  top: 0px;
  font-size: 15px;
  color: #323232;
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  /* border-top: solid 0.5px #d2d2d2; */
}

input {
  width: 100%;
  height: 100%;
  border: none;
}

.section {
  background-color: #fff;
  box-sizing: border-box;
  padding: 0px 0px 0px 15px;
  margin-bottom: 11px;
}

.section:last-child {
  margin-bottom: auto;
}

.input-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: solid 0.5px #e6e6e6;
  height: 50px;
  width: 100%;
}

.input-row:last-child {
  border-bottom: none;
}

.input-name {
  min-width: 71px;
  font-size: 16px;
}

.input-value {
  flex-grow: 1;
}

.input-icon {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  margin-right: 14px;
}

.input-icon.clear {
  width: 22px;
  height: 22px;
  background-image: url("https://imgs.hh-medic.com/icon/wmp/im_closepop.png");
}

.input-icon.arrow {
  width: 8px;
  height: 14px;
  background-image: url("https://imgs.hh-medic.com/icon/wmp/arrow.png");
}

.address-placeholder {
  color: #a0a0a0;
  position: relative;
  margin-left: 18px;
  font-size: 14px;
}

.address-placeholder::before {
  content: '';
  position: absolute;
  left: -18px;
  top: 2px;
  width: 11px;
  height: 15px;
  background-image: url("https://imgs.hh-medic.com/icon/wmp/select-location.png");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

.section-btn {
  margin-top: 86px;
  background-color: transparent;
  box-sizing: border-box;
  padding: 0px 10px;
  width: 100%;
  height: 44px;
}

.btn {
  width: 100%;
  height: 100%;
  background-color: #0592f5;
  color: #fff;
  border-radius: 5px;
  text-align: center;
  line-height: 44px;
  font-size: 16px;
}

.btn:active {
  background-color: #107bf2;
}

.btn.disabled {
  background-color: #d3d3d3;
}
