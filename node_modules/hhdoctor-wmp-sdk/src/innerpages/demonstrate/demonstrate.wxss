/* pages/demonstrate/demonstrate.wxss */
.pages{
  height:100vh;
  background:url('https://imgs.hh-medic.com/icon/wmp/bg-default.jpg') no-repeat;
  background-size:cover;
  background-position:center;
}
.call-box{
  width:100%;
  height:440rpx;
  background:rgba(0,0,0,.8);
  position:absolute;
  bottom:0;
  left:0;
  z-index:20;
  text-align: center;
  border-top:1px solid transparent;

}

.call-status{
  font-size:29rpx;
  font-family:PingFang SC;
  text-indent: 20rpx;
  color:rgba(235,241,248,1);
  margin:100rpx auto 0 auto;
  
}
.call-cancel{
  left:313rpx;
}
.call-text{
  font-size:21rpx;
  font-family:MicrosoftYaHei;
  color:rgba(242,242,242,1);
  text-align: center;
  position:absolute;
  bottom:80rpx;
}


.on-the-line .call-text{
  bottom:80rpx;
}
.call-hangup{
  left:314rpx;
}
.call-hangup::before,.call-cancel::before{
  content:'';
  opacity: .9;
  display:block;
  width:122rpx;
  height:122rpx;
  background:url('https://imgs.hh-medic.com/icon/wmp/call-hangup.png') no-repeat;
  background-size:cover;
  margin:0 auto 30rpx auto;
}
.call-doctor{
  left:547rpx;
}
.call-doctor::before{
  content:'';
  display:block;
  width:122rpx;
  height:122rpx;
  margin:0 auto 30rpx auto;
  background:url('https://imgs.hh-medic.com/icon/wmp/call-doctor.png') no-repeat;
  background-size:cover;
}
/* 播放中 */
.video{
  width:100%;
  height:100vh;
}
.logo{
  width:400rpx;
  height:300rpx;
  z-index:100;
  position:absolute;
  left:50rpx;
  top:80rpx;
}
.demo-tip{
  position:fixed;
  z-index:1000;
  bottom:385rpx;
  width:100%;
  display:flex;
  justify-content: center;
}
.demo-tip-one{
  bottom:515rpx;
}
.demo-tip-text{
  border-radius:10rpx;
  font-size:30rpx;
  color:#fff;
  font-family:PingFangSC-Regular;
  padding:22rpx 45rpx;
  background:rgba(0,0,0,.5);
}

.live-pusher{
  position:absolute;
  width:241rpx;
  height:334rpx;
  top:122rpx;
  right:10rpx;
}
.auth-box{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100vh;
  background:rgba(0,0,0,.5);
  z-index:120;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.auth-text{
  color:#fff;
  font-size:29rpx;
  text-align:center;
  line-height:42rpx;
  width:642rpx;
  margin:60rpx auto;
}
.auth-button{
  width:660rpx;
  height:100rpx;
  line-height:100rpx;
  background:#19be6b;
  border-radius:10px;
  color:#fff;
  font-size:32rpx;
}
.call-mask{
  position:absolute;
  bottom:0;
  width:100%;
  height:485rpx;
  background:url('https://imgs.hh-medic.com/icon/wmp/call-mask.png') no-repeat;
  background-size:cover;
}











