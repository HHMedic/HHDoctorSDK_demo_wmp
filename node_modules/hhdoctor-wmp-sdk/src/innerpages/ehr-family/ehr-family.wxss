/* components/innerpages/ehr-family/ehr-family.wxss */
.page{
  background:#f2f2f2;
  min-height:100vh;
  box-sizing: border-box;
  border-top:1px solid #eee;
}
.family-list{
  background:#fff;
}
.family-item{
  position:relative;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden
}


.family-content {
  width: 100%;
  padding: 10px;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  border-bottom:1px solid #d2d2d2;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}
.family-left{
  display:flex; 
}

.family-del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .family-content,.touch-move-active .family-del {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}
.family-avatar{
  display:block;
  width:121rpx;
  height:121rpx;
  border-radius:50%;
}
.family-text{
  margin-left:20rpx;
  display:flex;
  flex-direction: column;
  justify-content: center;
}
.family-name{
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.family-status{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(100,100,100,1);
  display:flex;
  align-items: center;
  margin-top:21rpx;

}
.family-status:before{
  content:'';
  display:block;
  width:24rpx;
  height:30rpx;
  margin-right:20rpx;
  background:url('https://imgs.hh-medic.com/icon/wmp/family-status.png') no-repeat;
  background-size:cover;
}
.family-edit{
  width:100rpx;
  height:100rpx;
  background:url('https://imgs.hh-medic.com/icon/wmp/family-edit.png') no-repeat;
  background-size:30rpx;
  position:absolute;
  right:10rpx;
  top:40rpx;
  background-position: center;
}
.family-add{
  height:181rpx;
  display:flex;
  align-items: center;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  background:#fff;

}
.family-add::before{
  content:'';
  display:block;
  width:66rpx;
  height:66rpx;
  margin:0 48rpx 0 58rpx;
  background:url(https://imgs.hh-medic.com/icon/wmp/family-add.png) no-repeat;
  background-size:cover;
}