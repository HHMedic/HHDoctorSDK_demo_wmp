  box-sizing: border-box;
  border-top:1px solid #eee;
}
.member-theme{
  height:302rpx;
  background:#fff;
  display:flex;
  align-items: center;
  justify-content: center;
}
.member-avatar{
  width:166rpx;
  height:166rpx;
  display:block;
  border-radius:50%;
}
.inputs-text{
  margin-right:27rpx;

}
.member-inputs{
  margin-top:10rpx;
  background:#fff;
