page {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  font-family: PingFangSC-Regular, sans-serif;
  font-size: 15px;
  box-sizing: border-box;
  padding-bottom: 30px;
}

.panel {
  background-color: #fff;
  margin-top: 10px;
  box-sizing: border-box;
  padding-left: 15px;
}

.panel:first-child {
  margin-top: 1px;
}

.panel-head {
  width: 100%;
  height: 45px;
  min-height: 45px;
  line-height: 45px;
  border-bottom: solid 0.5px #dcdcdc;
}

.panel-head-desc {
  font-size: 12px;
  color: #969696;
}

.panel-body {
  box-sizing: border-box;
  padding-top: 13px;
  padding-bottom: 13px;
  padding-right: 15px;
}

.item {
  width: 100%;
  min-height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  padding: 15px 15px 15px 0px;
  border-bottom: solid 0.5px #dcdcdc;
}

.item:last-child {
  border-bottom: none;
}

.item-name {
  min-width: 75px;
  color: #646464;
}

.item-value {
  flex-grow: 1;
  word-wrap: normal;
}

.item-value.placeholder {
  color: #969696;
}

.item-value.money {
  color: #0592f5;
}

.money-number {
  font-size: 17px;
  font-weight: bold;
}

.item-arrow {
  margin-right: 15px;
  width: 8px;
  height: 13px;
  background-image: url('https://imgs.hh-medic.com/icon/wmp/arrow.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.btn {
  margin: 30px 15px;
  border-radius: 5px;
  background-color: #0592f5;
  color: #fff;
  font-size: 16px;
}

.disabled {
  background-color: #969696;
}

.qr-test {
  width: 200px;
  height: 200px;
}
