page {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}

.wrap {
  background-color: #f2f2f2;
  width: 100%;
}

.navi-back {
  position: fixed;
  left: 14rpx;
  width: 60rpx;
  height: 60rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  z-index: 999;
}

.top {
  width: 100%;
  height: 586rpx;
  position: relative;
  background-color: #fff;
}

.doctor-banner {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
}

.doctor-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
  z-index: 999;
  position: absolute;
  left: 0rpx;
  top: 211rpx;
  width: 100%;
}

.doctor-image {
  width: 174rpx;
  height: 174rpx;
  border-radius: 50%;
}

.doctor-name {
  font-size: 36rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
  font-weight: bold;
  color: #333333;
  margin-top: 20rpx;
}

.doctor-desc {
  margin-top: 10rpx;
}


.info-title {
  font-size: 30rpx;
  line-height: 40rpx;
  color: #333333;
  height: 98rpx;
  line-height: 98rpx;
  border-bottom: solid 0.5px #D2D2D2;
  margin-bottom: 30rpx;
}

.info-wrap {
  margin-top: 12rpx;
  width: 100%;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #666666;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0rpx 29rpx 50rpx 29rpx;
}