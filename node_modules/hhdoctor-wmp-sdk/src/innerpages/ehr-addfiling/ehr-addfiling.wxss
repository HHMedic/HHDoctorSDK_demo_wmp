/* components/innerpages/ehr-addfiling/ehr-addfiling.wxss */
.page{
  border-top:1px solid #eee;
  min-height:100vh;
  background:#f2f2f2;
}
.add-name{
  height:128rpx;
  background:rgba(255,255,255,1);
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  display:flex;
  align-items: center;
  padding:0 30rpx;
  margin-bottom:8rpx;
}
.add-main{
  padding:30rpx;
  background:#fff;
}
.add-title{
  font-size:34rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-top:20rpx;
}
.add-text{
  font-size:32rpx;
  color:rgba(51,51,51,.7);
}

.add-picture{
  display:flex;
  align-items: center;
  margin-top:27rpx;
}
.add-icon{
  width:134rpx;
  height:134rpx;
  background:url('https://imgs.hh-medic.com/icon/wmp/add-icon.png') no-repeat;
  background-size:cover;
  margin-right:30rpx;

}
.add-imgs{
  width:134rpx;
  height:134rpx;
  border-radius:10rpx;
  overflow:hidden;
  position:relative;
}
.add-img{
  width:100%;
  height:100%;
}
.add-imgs-many{
  position:absolute;
  bottom:0;
  left:0;
  right:0;
  height:40rpx;
  background:rgba(0,0,0,.5);
  line-height:40rpx;
  font-size:22rpx;
  color:rgba(255,255,255,1);
  text-align: center;

}
.text-area{
  width:690rpx;
  height:143rpx;
  border:1px solid #eee;
  border-radius:10rpx;
  margin-top:30rpx;
  padding:16rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:#000;
  line-height:40rpx;
  box-sizing: border-box;
}
.textarea-placeholder{
  color:rgba(51,51,51,.7);
  line-height:40rpx;
}
.add-explain{
  margin-top:4rpx;
}
.explain-caption{
  margin-top:33rpx;
  display:flex;
  align-items: center;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  
}
.explain-caption::before{
  content:'';
  display:block;
  width:44rpx;
  height:44rpx;
  margin-right:6rpx;
}
.explain-checked::before{
  background:url('https://imgs.hh-medic.com/icon/wmp/explain-checked.png') no-repeat;
  background-size:cover;
}
.explain-check:before{
  background:url('https://imgs.hh-medic.com/icon/wmp/explain-check.png') no-repeat;
  background-size:cover;
}
.explain-txt{
  width:600rpx;
  padding:20rpx;
  background:rgba(242,242,242,1);
  font-size:24rpx;
  font-family:PingFang SC;
  color:rgba(102,102,102,1);
  line-height:36rpx;
  margin:24rpx 0 0 50rpx;
}
.add-submit{
  width:690rpx;
  height:88rpx;
  line-height:88rpx;
  background:#0592F5;
  font-size:32rpx;
  color:#fff;
  margin:50rpx auto;

}
.add-submit::after{
  border:none;
}
.add-authcode{
	color:#006EFF;
	display:inline-block;
}

.code-modal{
	position:fixed;
	top:0;
	width:100%;
	left:0;
	height:100vh;
	background:rgba(0,0,0,.5)
}
.code-inner{
	width:620rpx;
	background:#fff;
	border-radius:20rpx;
	overflow:hidden;
	box-sizing: border-box;
	padding:50rpx 38rpx;
	margin:35% auto 0 auto;
	
	
}
.code-inner-text{
	font-size:28rpx;
	color:#4a4a4a;
	margin:20rpx auto;
}
.code-inner-line{
	display:flex;
	height:50rpx;
	
}
.code-inner-title{
	width:180rpx;
	text-align: right;
}
.code-inner-val{
	width:200rpx;
}
.code-inner-tip{
	font-size:26rpx;
	font-family:PingFang SC;
	color:rgba(102,102,102,1);
	line-height:36rpx;
	white-space:pre-wrap;
}










