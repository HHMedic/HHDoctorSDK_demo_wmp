/* components/innerpages/ehr-filingdetail/ehr-filingdetail.wxss */
.page{
  background:#f2f2f2;
  min-height:100vh;
  border-top:1px solid #eee;
}
.detail-line{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:300;
  color:rgba(51,51,51,1);
  padding:30rpx 27rpx 50rpx 27rpx;
  line-height:42rpx;
  
}
.detail-suggest {
		font-size: 28rpx;
		font-family: PingFangSC-Light;
		color:#333;
		line-height: 42rpx;
		padding: 0 27rpx;
	}
	.detail-tip-wrap{
		background:#f2f2f2;
		margin:30rpx -27rpx 0 -27rpx;
		padding:20rpx 52rpx;
		min-height:120rpx;
		
	}
	.detail-tip-content{
		
		display:flex;
		
	}
	.detail-tip-icon{
		display:block;
		width:32rpx;
		height:32rpx;
		background:url('https://imgs.hh-medic.com/icon/wmp/msg-gray.png') no-repeat;
		background-size:cover;
		margin-right:10rpx;
	}
	.detail-tip-text{
		width:610rpx;
		color:#969696;
		font-size: 26rpx;
		font-family: PingFang SC;
		text-align: justify;
	}

	.detail-suggest-img {
		width: 176rpx;
		height: 176rpx;
		border: 1px solid rgba(210, 210, 210, 1);
		border-radius: 10rpx;
		overflow: hidden;
		margin: 30rpx 27rpx;
		position: relative;
	}

	.detail-suggest-images {
		width: 100%;
		height: 100%;
	}

.detail-suggest-many{
  position:absolute;
  right:0;
  top:0;
  color:#fff;
  font-size:22rpx;
  font-family:PingFang SC;
  font-weight:300;
  padding:0 10rpx;
  width:142rpx;
  height:40rpx;
  background:linear-gradient(-90deg,rgba(0,0,0,.4) 0%,rgba(0,0,0,0) 100%);
  text-align: right;

}
.detail-medicine{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(100,100,100,1);
  line-height:42rpx;
  padding:30rpx 27rpx;
  position:relative;
  border-bottom:1px solid #eee;
}
.detail-medicine:nth-last-of-type(1){border:none;}
.detail-medicine-name{
  font-size:30rpx;
  color:rgba(50,50,50,1);
  line-height:45rpx;
  margin-bottom:20rpx;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width:600rpx;
}
.detail-medicine-many{
  position:absolute;
  right:30rpx;
  top:30rpx;
  font-size:30rpx;
  color:rgba(50,50,50,1);
}
.filing-scroll{
  max-height:176rpx;
  white-space: nowrap;
  margin:22rpx 0 30rpx 0;
}
.reply-box{
  padding-bottom:40rpx;
}

	.reply-box {
		padding-bottom: 40rpx;
	}
	.detail-top{
		width:750rpx;
		min-height:80rpx;
		background:#FFF9DF;
		font-size:26rpx;
		font-family:Hiragino Sans GB;
		font-weight:normal;
		color:rgb(167,111,22);
		display:flex;
		justify-content: center;
		align-items: center;
	}
	.detail-top-inner{
		width:650rpx;
		padding:15rpx 20rpx;
	}
	.detail-top-close{
		width:16px;
		height:16px;
		background:url('https://imgs.hh-medic.com/icon/wmp/detail-top-close.png') no-repeat;
		background-size:cover;
		margin:0 12rpx;
	}


