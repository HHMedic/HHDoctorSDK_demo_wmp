/* Component/hh-evaluate/hh-evaluate.wxss */
.page{
  height:100vh;
}
.contain{
  position:fixed;
  background:rgba(0,0,0,.5);
  top:0;
  left:0;
  right:0;
  bottom:0;
  z-index:200;
}
button{
  margin:0;
  padding:0;
}
button::after{
  border:none;
}
.evaluate{
  position:absolute;
  bottom:0;
  background:#fff;
  width:750rpx;
  font-family:PingFang SC;
}
.evaluate-top{
  height:100rpx;
  display:flex;
  align-items: center;
  justify-content: space-around;
  position:relative;
  border-bottom:1px solid #E6E6E6;
}
.evaluate-close{
  font-size:50rpx;
  height:100rpx;
  line-height:100rpx;
  color:#2F3B53;
  position:absolute;
  left:40rpx;
  top:2rpx;
}
.evaluate-title{
  font-family: PingFangSC-Regular;
  color:#282828;
  font-size:32rpx;
}
.evaluate-box{
  padding-bottom:80rpx;
  box-sizing: border-box;
  min-height:378rpx;
}
.complain-link{
  color:#0592F5;
  font-size:28rpx;
  font-family:PingFang SC;
  display:flex;
  align-items: center;
  justify-content: center;
}
.complain-link::after{
  content:'';
  display:block;
  width:13rpx;
  height:24rpx;
  margin-left:10rpx;
  background:url('https://imgs.hh-medic.com/icon/wmp/complain-link.png') no-repeat;
  background-size:cover;
}
.evaluate-box{
  font-family:PingFang SC;

}
/* 模板1 */
.evaluate-init{
  margin-top:56rpx;
  min-height:264rpx;
}
.init-title{
  font-size:34rpx;
  text-align: center;
  color:#2F3B53;
}
.init-btns{
  margin-top:60rpx;
  display:flex;
  justify-content: center;
}
.init-btns view{
  width:240rpx;
  height:70rpx;
  margin:0 29rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  border-radius:4rpx;  
}
.init-button{
  border:1px solid rgba(190, 190, 190, 1);
  color:#282828;
}
.init-button::before,.init-smile::before,.init-cry::before{
  content:'';
  display:block;
  width:30rpx;
  height:30rpx;
  margin-right:19rpx;
}

.init-button:nth-of-type(1)::before{
  background:url('https://imgs.hh-medic.com/icon/wmp/init-button-1.png') no-repeat;
  background-size:cover;
}

.init-button:nth-of-type(2)::before{
  background:url('https://imgs.hh-medic.com/icon/wmp/init-button-2.png') no-repeat;
  background-size:cover;
}
.init-smile::before{
  background:url('https://imgs.hh-medic.com/icon/wmp/init-smile.png') no-repeat;
  background-size: cover;
}
.init-cry::before{
  background:url('https://imgs.hh-medic.com/icon/wmp/init-cry.png') no-repeat;
  background-size: cover;
}
.init-smile,.init-cry{
  border:1px solid #FFD195;
  background:#FFF7E4;
  color: #FF8A00
}
/* 模板2 */
.evaluate-star{
  margin:57rpx auto 0 auto;
  width:375rpx;
  height:50rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.evaluate-star view{
  width:50rpx;
  height:50rpx;
  background:url('https://imgs.hh-medic.com/icon/wmp/evaluate-star.png') no-repeat;
  background-size:cover;
}

.evaluate-star .star{
  background:url('https://imgs.hh-medic.com/icon/wmp/evaluate-star-star.png') no-repeat;
  background-size:cover;
}
.evaluate-desc{
 text-align: center;
 margin-top:39rpx;
 font-size:24rpx;
 color:#797D86;
}
.desc{
 color:#FF8A00;
}
.evaluate-main{
  margin-top:44rpx;
}
.evaluate-list{
  margin-left:64rpx;
  overflow:hidden;
}
.evaluate-item{
  width:270rpx;
  height:60rpx;
  line-height:60rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(100,100,100,1);
  border:1px solid rgba(210, 210, 210, 1);
  border-radius:4rpx;
  text-align: center;
  margin:0 20rpx 32rpx 20rpx;
  float:left;
  box-sizing: border-box;
}
.star-item{
  background:#FFF7E4;
  border:1px solid rgba(255, 209, 149, 1);
  color:#FF8A00;
}
.evaluate-confirm{
  width:582rpx;
  height:80rpx;
  background:rgba(5,146,245,1);
  border-radius:10rpx;
  text-align: center;
  line-height: 80rpx;
  color:#fff;
  margin:0 auto 63rpx auto;
}
/* 模板3 */
.thanks-title,.thanks-text{
  width:598rpx;
  margin:auto;
  text-align: center;
  font-size:30rpx;
  font-weight: 400;
  color:rgba(100,100,100,1);
  line-height:42rpx;

}
.thanks-button{
  width:582rpx;
  height:80rpx;
  background:rgba(5,146,245,1);
  border-radius:10rpx;
  text-align: center;
  line-height: 80rpx;
  color:#fff;
  margin:68rpx auto 94rpx auto;
}
/* 模块4 */
.evaluate-result{
  font-size:26rpx;
  color:rgba(121,125,134,1);
  line-height:42rpx;
  text-align: center;
  display:flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.evaluate-result::before{
  content:'';
  display:block;
  width:80rpx;
  height:80rpx;
  margin:60rpx auto 29rpx auto;
  background:url('https://imgs.hh-medic.com/icon/wmp/evaluate-result.png') no-repeat;
  background-size:cover;
}
.thanks-complain{
  text-align: left;
}
.evaluate-complain{
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
} 
.complain-input{
  width:582rpx;
  height:100rpx;
  background:rgba(244,244,244,1);
  padding:0 40rpx 0 28rpx;
  box-sizing: border-box;
  margin:19rpx auto 29rpx auto;
}
.complain-tip{
  font-size:29rpx;
  color:rgba(150,150,150,1);
}
.complain-button{
  width:582rpx;
  height:80rpx;
  background:rgba(5,146,245,1);
  border-radius:10rpx;
  text-align: center;
  line-height: 80rpx;
  color:#fff;
  margin:auto;
}
.complain-textarea{
  width:582rpx;
  min-height:200rpx;
  max-height:600rpx;
  margin-top:21rpx;
  background:rgba(244,244,244,1);
  padding:30rpx;
  box-sizing: border-box;
}

.evaluate-input-wrap {
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0rpx 84rpx 40rpx ;
}

.evaluate-input {
  border-radius: 10rpx;
  border: 1px solid #e6e6e6;
}

