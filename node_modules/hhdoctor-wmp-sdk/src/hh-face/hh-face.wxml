<view class='page' style='padding-top:{{sysInfo.statusBarHeight}}px' >
    <view class='page-title'>
        <view class='page-back' catchtap='bindCloseFace'></view> 人脸认证
    </view>
    <view class='face-icon'></view>
    <!-- 如果是本人登录 -->
    <view class='face-text'>当前服务需要人脸识别认证，以确保是帐户本人使用</view>
    <view class='face-name'>{{common.formatFaceName(username)}}</view>
    <view class='face-id'>{{common.formatFaceCardId(idCard)}}</view>
    <view class='face-go' bindtap='bindFaceVerify'>开始人脸识别认证</view>
    <!-- 否则为成员（成员使用独立子账号登录）如果是主账号自己则没有parent  -->
    <!-- wx:if='{{parent && patient.uuid != parent.uuid && parent.is_auth}}' -->
    <block wx:if="{{whiteName}}">
        <view class='face-help' bindtap='bindHelpVerify'>
        {{isSelfFaceType?"由关系人 "+ common.formatFaceName(whiteName)+" 帮助认证":common.formatFaceName(whiteName)+" 本人认证"}}
        </view>
        <view class='face-tip'>若当前帐户为幼儿、老人，不方便刷脸或刷脸验证未通过时，可让关系人刷脸帮助认证</view>
    </block>
    <view class='face-continue' bindtap='bindContinue' wx:if="{{showSkipFace}}">跳过</view>

</view>