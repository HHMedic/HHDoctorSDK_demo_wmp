.template-custom .pusher-container {
  position: absolute;
  width: 120px;
  height: 160px;
  position: absolute;
  right: 10px;
  top: 85px;
  z-index: 900;
}

.template-custom .player-container {
  position: absolute;
}

.template-custom .pusher-controller {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 70rpx;
  background-color: rgba(0, 0, 0, 0.5);
  line-height: 70rpx;
  color: #fff;
  font-size: 28rpx;
  z-index: 999;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.close-video {
  width: 50rpx;
  height: 50rpx;
  background-image: url("https://imgs.hh-medic.com/icon/wmp/icon-close-video.png");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  margin-right: 11rpx;
}

.open-video {
  width: 50rpx;
  height: 50rpx;
  background-image: url("https://imgs.hh-medic.com/icon/wmp/icon-open-video.png");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  margin-right: 11rpx;
}

.template-custom .vertical {
  flex-flow: column nowrap;
  height: 100%;
}

.template-custom .icon-vertical {
  margin-bottom: 23rpx;
  /* margin-right: auto; */
}

.patient-view-wrap {
  background-color: #222426;
  position: absolute;
  width: 120px;
  height: 160px;
  position: absolute;
  right: 10px;
  top: 250px;
  z-index: 900;
}

.play-box-bg {
  background-image: url('https://imgs.hh-medic.com/icon/wmp/play-box-bg.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.player-inner {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.player-circle {
  display: flex;

}

.player-hangup {
  width: 76rpx;
  height: 27rpx;
  background: url('https://imgs.hh-medic.com/icon/wmp/player-hangup.png') no-repeat;
  background-size: cover;
  margin-bottom: 37rpx;
}

.player-leave {
  padding: 0 10rpx;
  font-size: 26rpx;
  /* color: #4f565b; */
  color: #f2f2f2;
}

.circle {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50rpx;
  background: #fff;
  margin: 10rpx;
  animation: load .9s ease infinite;
}

@keyframes load {
  0% {
    opacity: 1;
  }

  100% {
    opacity: .4;
  }
}

.circle:nth-of-type(1) {
  animation-delay: 0.15s;
}

.circle:nth-of-type(2) {
  animation-delay: 0.3s;
}

.circle:nth-of-type(3) {
  animation-delay: 0.45s;
}