/* components/hh-modal/hh-modal.wxss */
.modal-wrap{
  background:rgba(0,0,0,.5);
  position:fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  z-index:9
}
.modal-content{
  width:546rpx;
  background:#fff;
  border-radius:20rpx;
  position:absolute;
  top:35%;
  left:102rpx;
  text-align:center;
  box-sizing: border-box;
}
.modal-title{
  font-size:30rpx;
  color:rgba(50,50,50,1);
  height:130rpx;
  line-height:130rpx;
  font-weight:500;

}
.modal-text{
  padding:0 40rpx;
  margin-bottom:54rpx;
  text-indent:50rpx;
  font-size:30rpx;
  min-height:170rpx;
  display:flex;
  align-items: center;
  justify-content: center;
  font-weight:400;
  color:rgba(50,50,50,1);
  line-height:48rpx;
  text-align: center;
}
.modal-button{
  height:90rpx;
  border-top:1px solid #E6E6E6;
  display:flex;
  align-items: center;
  font-size: 30rpx;
}
.modal-cancel{
  height:90rpx;
  line-height:90rpx;
  color:rgba(100,100,100,1);
  flex-grow:1;
  border-right:1px solid #E6E6E6;
}
.modal-confirm{
  height:90rpx;
  line-height:90rpx;
  color:rgba(0,166,255,1);
  flex-grow:1;
}