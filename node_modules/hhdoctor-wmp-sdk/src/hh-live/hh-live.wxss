.swiper-item {
  height: 100%;
}

.hidden {
  display: none;
}

.full-screen {
  width: 100%;
  height: 100%;
}

.live-bg {
  width: 100%;
  height: 76px;
}

.btn-close {
  position: absolute;
  left: 15px;
  width: 25px;
  height: 25px;
  /* background-color: rgba(0, 0, 0, 0.4); */
  border-radius: 5px;
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.close-image {
  width: 24px;
  height: 24px;
}

