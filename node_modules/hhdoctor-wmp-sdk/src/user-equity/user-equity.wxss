/* components/user-equity/user-equity.wxss */
.page{
    background:#fff;
    padding:10rpx 0 15rpx 0;
    margin-bottom:30rpx;
}
.equity-title{
    text-align: center;
    font-size: 34rpx;
    color:#323232;
    font-weight: 500;
    display:flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 15rpx;
}
.equity-title:before{
    content:'';
    display:block;
    width:36rpx;
    height:31rpx;
    background:url('https://imgs.hh-medic.com/icon/wmp/icon-diamond.png') no-repeat;
    background-size:cover;
    margin-right:10rpx;
}

.equity-box{
    display:flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
    padding:0 10rpx;
    height:400rpx;
    box-sizing: border-box;
}
.equity-item{
    width:140rpx;
    height:140rpx;
    font-size: 28rpx;
    margin:30rpx 20rpx;
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color:#41455b;
}
.filter{
    filter: grayscale(100%);
    color:#999; 
}
.equity-icon{
    display:block;
    width:80rpx;
    height:80rpx;
    margin-bottom:20rpx;
}
.equity-text{
    display:block;
    width:100%;
    overflow:hidden;
    text-align: center;
    text-overflow:ellipsis;
    white-space: nowrap;
    word-break: break-all;
}












