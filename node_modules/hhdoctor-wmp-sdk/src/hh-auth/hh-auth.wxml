<view class="page">
        <cover-view class="auth-main">
            <cover-view class='auth-flex'>
                <cover-view class='auth-title'>为方便您的使用，请授权以下权限</cover-view>
                <cover-view class="auth-item" wx:for="{{authArr}}" wx:key="index">
                    <cover-image src='{{item.icons}}' class="auth-image"></cover-image>
                    <cover-view>{{item.text}}</cover-view>
                </cover-view>
                <button class='auth-button' wx:if='{{!authList}}' catchtap='bindFirstAuth'>我知道了</button>
                <block wx:else>
                    <!-- 有授权列表但用户曾拒绝过授权 -->
                    <button class='auth-button auth-go' open-type='openSetting' catchtap='bindHideAuth'>去授权</button>
                    <cover-view class='auth-wait' catchtap='bindNoAuth'>暂不授权</cover-view>
                </block>
            </cover-view>
            <cover-view class="auth-bottom"></cover-view>
        </cover-view>
</view>