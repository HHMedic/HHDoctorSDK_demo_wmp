.page{
    height:100vh;
    background:rgba(0,0,0,.6);
    position:fixed;
    width:750rpx;
    top:0;
    left:0;
    z-index:1000;
}
.auth-main{
    position:absolute;
    background:#fff;
    border-radius:30rpx 30rpx 0 0;
    bottom:0;
    left:0;
    width:750rpx;
    min-height:506rpx;
    padding-bottom: 100rpx;
    font-family: PingFang SC Regular, PingFang SC Regular-Regular;
}
.auth-flex{
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.auth-title{
    color:#646464;
    margin:73rpx auto 85rpx auto;
    font-size:32rpx;
}
.auth-item{
    display:flex;
    align-items: center;
    width:460rpx;
    margin-bottom:30rpx;
}
.auth-item::before{
    content:'';
    display:block;
    width:70rpx;
    height:70rpx;
    margin-right:21rpx;
}
.auth-camera::before{
    background:url('https://imgs.hh-medic.com/icon/wmp/auth/auth-camera.png') no-repeat;
    background-size:cover;
}
.auth-record:before{
    background:url('https://imgs.hh-medic.com/icon/wmp/auth/auth-record.png') no-repeat;
    background-size:cover;
}
.auth-position:before{
    background:url('https://imgs.hh-medic.com/icon/wmp/auth/auth-position.png') no-repeat;
    background-size:cover;
}
.auth-button{
    margin:40rpx auto 0 auto;
    height:88rpx;
    width:629rpx;
    background:#0592f5;
    color:#fff;
    font-size:34rpx;
}
.auth-go{
    margin-bottom:60rpx;
}
.auth-wait{
    font-size:28rpx;
    color:#646464;
    font-weight: 400;
}