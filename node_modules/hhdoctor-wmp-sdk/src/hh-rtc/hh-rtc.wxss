/* components/hh-rtc/hh-rtc.wxss */

.container-box {
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: cover;
  height: 100vh;
  overflow: hidden;
}

.camera-box {
  width: 100vw;
  height: 100%;
  box-sizing: border-box;
}
.waitting-box{
  width:100vw;
  height:100vh;
  box-sizing: border-box;
  background-size:cover;
  background-position: center;
  /* background-repeat: no-repeat; */
  
}

.room-box{
  width:100%;
  height:100%;
  position:absolute;

}
  .wait-video-wrap{
    position:fixed;
    top:348rpx;
    left:0rpx;
    width:750rpx;
    height:550rpx;
    line-height:80rpx;
    color:#fff;
    overflow:hidden;
  }
  .wait-video-box{
    width: 632rpx;
    height:253rpx;
    background:#fff;
    margin:auto;
    border-radius:10rpx;
    display:flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding:35rpx;
    box-sizing: border-box;
    color:#333;
  }
  .wait-video-title{
    font-size:36rpx;
  }
  .wait-video-title2{
    font-size:28rpx;
    margin-top:40rpx;
  }
  .wait-time-tip{
    width:432rpx;
    height:80rpx;
    line-height:80rpx;
    color:#fff;
    background:rgba(0,0,0,.5);
    font-size:30rpx;
    border-radius:10rpx;
    text-align: center;
    margin:150rpx auto 0 auto;
  }


/* 呼叫区 ------ begin */
.room-modal{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  height:438rpx;
  background:rgba(0,0,0,.8);
  text-align: center;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(235,241,248,1);
  overflow:hidden;
}
.room-modal-wait{
  height:110px;
}
.wait-text{
  font-size:36rpx;
  margin-top:20rpx;
}
.room-name{
  font-size:48rpx;
  margin-top:49rpx;
}
.room-wait{
  font-size:36rpx;
  margin-top:59rpx;
}
.wait-icon{
  margin-top:29rpx;
}

.room-status{
  font-size:29rpx;
  margin-top:25rpx;
}
.room-icons{
  display:flex;
}
.room-icon{
  margin:55rpx auto;
}
.room-image{
  width:120rpx;
  height:120rpx;
  display:block;
  margin:auto;
}
.room-cancel{
  margin-top:40rpx;
  font-size:22rpx;
  font-family:MicrosoftYaHei;
}

.logo-image{
  position:absolute;
  display:block;
  left:50rpx;
  top:80rpx;
}

/* 视频底部功能区 */

.bottom-bg{
  width:100%;
  height:482rpx;
  position:fixed;
  bottom:0;
}
.room-bottom{
  position:fixed;
  bottom:40rpx;
  width:100%;
  display:flex;
  justify-content: space-around;

}
.bottom-image{
  width:122rpx;
  height:122rpx;
  display:block;
  margin-bottom:24rpx;
}

.bottom-item{
  width:122rpx;
  height:180rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  color:rgba(255,255,255,1);
  text-align: center;

}

.bottom-change{
  color:#4a4a4a;
}


/* 右侧按钮区 */
.room-right{
  width:160rpx;
  position:fixed;
  right:27rpx;
  bottom:337rpx;
  border-radius:15rpx;
  font-size:20rpx;
  font-family:PingFangSC-Regular;
  color:#fff;

}
.room-inner{
  box-sizing: border-box;
  background:rgba(0,0,0,.5);
  /* height:368rpx;  */
}
.right-certificate{margin-top:50rpx;}
.right-flash{margin-bottom:29rpx;}
.right-arrow{
  width:100%;
  height:86rpx;
  display:flex;
  align-items: center;
  justify-content:center;
  background:rgba(0,0,0,.5);
}

.arrow-img{
  width:56rpx;
  height:46rpx;
}
.right-item{
  width:100%;
}
.right-img{
  width:84rpx;
  display:block;
  margin:0 auto 20rpx auto;
}
.right-flash .right-img{
  width:57rpx;
}
.right-flash{
  margin-top:43rpx;
}

/* 执业医师资格证书展示 */
.cover-preview{
  position:fixed;
  width:100%;
  left:0;
  top:0;
  bottom:0;
  display:flex;
  justify-content: center;
  align-items: center;
  z-index:10000;
  background:rgba(0,0,0,.8);
}
.preview-img{
  width:100%;
  height:auto;
  display:block;
}
.preview-count{
  color:#fff;
  position:absolute;
  top:150rpx;
  left:250rpx;
  font-size:24rpx;
  z-index:10001;
  width:250rpx;
  text-align-last: center;
}
.preview-next{
  color:#fff;
  position:absolute;
  right:30rpx;
  bottom:260rpx;
  font-size:30rpx;
  height:80rpx;
  z-index:10001;
}
.video-time{
  position:absolute;
  left:300rpx;
  top:75%;
  font-size:30rpx;
  color:#fff;
  width:150rpx;
  text-align:center;
  text-shadow: 0 0 5rpx rgba(0,0,0,.3);
}

/* 重新上传 */
