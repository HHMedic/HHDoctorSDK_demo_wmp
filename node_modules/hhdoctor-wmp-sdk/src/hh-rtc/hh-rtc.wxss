  text-align: center;
  
}
.upload-icon{
  position:absolute;
  width:52rpx;
  height:52rpx;
  left:60rpx;
  top:52rpx;
  
}
/* 专家呼叫页面-全屏模式 */
.room-screen{
  position:absolute;
  width:100%;
  height:100%;
  background:#000;
}
.room-icons{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  text-align: center;
  font-family:PingFangSC-Regular;
  color:rgba(235,241,248,1);
}
.room-specialist{position:absolute;width:380rpx;left:185rpx;top:195rpx;height:560rpx;}
.room-avatar{width:380rpx;height:380rpx;display:block;}
.room-name{font-size:50rpx;font-family:PingFang SC;color:rgba(229,240,251,1);height:55rpx;}
.room-status{color:rgba(229,240,251,1);font-size:30rpx;}














