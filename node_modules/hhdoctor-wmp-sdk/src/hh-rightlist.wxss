.right-list {
  /* margin-top: 25px; */
  box-sizing: border-box;
  padding-left: 13px;
  padding-top: 25px;
  background-color: #fff;
}

.title {
  width: 100%;
  font-size: 17px;
  line-height: 27px;
  text-align: center;
}

.title::before {
  content: '∙';
  font-size: 24px;
  position: relative;
  left: -6px;
  top: 3px;
}

.title::after {
  content: '∙';
  font-size: 24px;
  position: relative;
  left: 6px;
  top: 3px;
}

.right-row {
  box-sizing: border-box;
  padding: 13px 13px 13px 0px;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: solid 0.5px #dcdcdc;
}

.right-row:last-child {
  border-bottom: none;
}

.right-icon {
  width: 34px;
  height: 34px;
  min-width: 34px;
}

.right-item {
  flex-grow: 1;
  margin-left: 18px;
}

.item-title {
  font-size: 15px;
  line-height: 23px;
}

.item-text {
  font-size: 13px;
  line-height: 20px;
  color: #828282;
}

.link {
  margin-left: 10px;
  font-size: 13px;
  line-height: 23px;
  color: #0592f5;
  text-decoration: underline;
}
