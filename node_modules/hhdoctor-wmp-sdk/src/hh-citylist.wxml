<hhNavibar text='选择所在城市' color='#000' background-color='#fff' bindnavbarresize='_navbarResizeCityList' bindnaviback='_naviBack'></hhNavibar>

<view class='nav-bar' style='margin-top:{{navibarHeight}}px;'>
  <view class='nav-bar-text'>
    <input class='nav-bar-search' placeholder='请输入城市中文名' bindinput='_filterCitiesByKw'></input>
  </view>
</view>

<view class='section currect-city' wx:if='{{scopeLocation}}'>
  <image class='location-icon' src='https://imgs.hh-medic.com/icon/wmp/location.png'></image>
  <view class='city-label'>当前定位城市</view>
  <view>{{locationCity}}</view>
</view>

<scroll-view class='section city-lists' scroll-y='true' style='height:{{listHeight}}px;'>
  <view class='city-title'>热门城市</view>

  <view class='city-list-hot'>
    <block wx:for='{{hotCityList}}' wx:for-item='city' wx:key='id'>
      <view class='city-hot' catchtap='_selectCity' data-city='{{city}}'>{{city.name}}</view>
    </block>
  </view>

  <view class='city-list'>
    <block wx:for='{{cityList}}' wx:for-item='city' wx:key='id'>
      <view class='city' catchtap='_selectCity' data-city='{{city}}'>{{city.name}}</view>
    </block>
  </view>
</scroll-view>