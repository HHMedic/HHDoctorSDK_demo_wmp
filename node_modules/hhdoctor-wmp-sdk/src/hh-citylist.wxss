Page {
  background-color: #f2f2f2;
  box-sizing: border-box;
  padding-top: 1px;
  font-size: 15px;
  color: #333;
}

.nav-bar {
  width: 100%;
  height: 44px;
  border-bottom: solid 0.5px #ebebeb;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.nav-bar-text {
  flex-grow: 1;
  height: 35px;
  color: #000;
  box-sizing: border-box;
  padding: 0px 16px;
}

.nav-bar-search {
  width: 100%;
  height: 35px;
  background-color: #f6f6f6;
}

.nav-icon {
  position: absolute;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  z-index: 999;
}

.nav-icon.close {
  width: 40px;
  height: 35px;
  position: relative;
}

.nav-icon-close {
  position: absolute;
  left: 19px;
  top: 12px;
  width: 11px;
  height: 11px;
}

.section {
  background-color: #fff;
  box-sizing: border-box;
  padding: 0px 15px;
  margin-bottom: 6px;
}

.section:last-child {
  margin-bottom: auto;
}

.section.currect-city {
  height: 50px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.section.city-lists {
  padding: 10px 15px;
  width: 100%;
}

.location-icon {
  width: 12px;
  height: 16px;
  margin-right: 14px;
}

.city-label {
  margin-right: 25px;
}

.city-title {
  color: #969696;
}

.city-list-hot {
  margin-top: 5px;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.city-hot {
  min-width: 75px;
  height: 30px;
  background-color: #f6f6f6;
  text-align: center;
  line-height: 30px;
  margin-right: 10px;
  margin-top: 10px;
}

.city-list {
  margin-top: 15px;
  width: 100%;
}

.city {
  width: 100%;
  height: 45px;
  border-bottom: solid 0.5px #e6e6e6;
  line-height: 45px;
}

.city:active {
  background-color: #f6f6f6;
}
